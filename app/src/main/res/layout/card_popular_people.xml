<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card:cardElevation="6dp"
    card:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_cvpp_profile"
            android:src="@mipmap/poster_placeholder" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Scarlett Johansson"
                android:id="@+id/tv_cvpp_name"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:textColor="@color/popularpeople.cardview.title"
                android:lines="1"
                android:ellipsize="marquee"
                android:enabled="false"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="The Avengers, Iron Man 2, Avengers: Age of Ultron, Lucy"
                android:id="@+id/tv_cvpp_known_for"
                android:lines="5"
                android:textStyle="italic"
                android:gravity="center_vertical"
                android:textColor="@color/popularpeople.cardview.knownfor"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

        </LinearLayout>

    </LinearLayout>






</android.support.v7.widget.CardView>